{% extends '::base.html.twig' %}

{% block metas %}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="">
<meta name="author" content="">
{% endblock %}

{% block title %}
  {% trans %}Welcome to doDoc{% endtrans %}
{% endblock %}

{% block stylesheets %}
<link href="{{ asset('bundles/jazzywebdodoc/bootstrap/css/bootstrap.css') }}" type="text/css" rel="stylesheet" />

<link href="{{ asset('bundles/jazzywebdodoc/app/css/app.css') }}" type="text/css" rel="stylesheet" />

<style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>

    <link href="{{ asset('bundles/jazzywebdodoc/bootstrap/css/bootstrap-responsive.css') }}" type="text/css" rel="stylesheet" />

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <link rel="shortcut icon" href="favicon.ico"/>
    <link rel="apple-touch-icon-precomposed" sizes="129x129" href="apple-touch-icon.png"/>

    <!-- For markitup
    <link href="{{ asset('bundles/jazzywebdodoc/markitup/markitup/skins/markitup/style.css') }}"            
          type="text/css" rel="stylesheet" />
    
    <link href="{{ asset('bundles/jazzywebdodoc/markitup/markitup/sets/markdown/style.css') }}"            
          type="text/css" rel="stylesheet" /> -->

{% endblock %}

{% block body %}

    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="navbar-inner">
            <div class="container-fluid">
                <p class="navbar-text pull-right">Logged as Alberto Einstein </p>
                <a class="brand" href="#">doDoc - editor</a>
            {% block navbar_left_items%}

            {% endblock %}
                <ul class="nav pull-right">
                    <li><button class="btn btn-danger" title="logout" href="#"><i class="icon-off"></i></button></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid">
    {% block container %}
    {% endblock %}
        </div>

{% endblock %}

{% block javascripts %}

        <script type="text/javascript" src="{{ asset('bundles/jazzywebdodoc/jquery/jquery.js') }}"></script>  
        <script type="text/javascript" src="{{ asset('bundles/jazzywebdodoc/bootstrap/js/bootstrap.min.js') }}"></script>    
        <script type="text/javascript" src="{{ asset('bundles/jazzywebdodoc/backbone/underscore.js') }}"></script>    
        <script type="text/javascript" src="{{ asset('bundles/jazzywebdodoc/backbone/backbone.js') }}"></script>    
        
        <!-- For markitup
        <script type="text/javascript" src="{{ asset('bundles/jazzywebdodoc/markitup/markitup/jquery.markitup.js') }}"></script>    
        <script type="text/javascript" src="{{ asset('bundles/jazzywebdodoc/markitup/markitup/sets/markdown/set.js') }}"></script>    
        -->
        <script type="text/javascript" src="{{ asset('bundles/jazzywebdodoc/epiceditor/js/epiceditor.min.js') }}"></script>    
        <script type="text/javascript" src="{{ asset('bundles/jazzywebdodoc/app/js/app.js') }}"></script>    

{% endblock %}
